%h1 Listing portals (#{@count} total)

%table
  %thead
    %tr
      %th name
      %th image
      %th manage

  %tbody
    - @portals.each do |portal|
      %tr
        %td= portal.name
        %td
          <img class="m-5 h-16 w-16 object-cover rounded-md" src="#{portal.image_url}"
        %td= link_to 'Show', portal
        %td= link_to 'Edit', edit_portal_path(portal)
        %td= link_to 'Destroy', portal, :method => :delete, :data => { :confirm => 'Are you sure?' }

= paginate @portals
%br

= link_to 'New Portal', new_portal_path
